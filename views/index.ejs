<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mi E-commerce</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        .navbar-brand {
            font-weight: bold;
            letter-spacing: 1px;
        }

        .card {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            border: none;
            border-radius: 12px;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        }

        .card-img-top {
            height: 220px;
            object-fit: contain;
            padding: 15px;
            background-color: #f8f9fa;
        }

        .price {
            font-size: 1.2rem;
        }

        /* BotÃ³n Ver Detalle */
        .btn-detalle {
            background-color: #0dcaf0;
            color: #fff;
            border: none;
        }

        .btn-detalle:hover {
            background-color: #0bb5d8;
            color: #fff;
        }

        /* BotÃ³n Editar */
        .btn-editar {
            background-color: #6f42c1;
            color: #fff;
            border: none;
        }

        .btn-editar:hover {
            background-color: #5a34a1;
            color: #fff;
        }

        footer {
            margin-top: 60px;
            padding: 20px 0;
            background-color: #212529;
            color: #fff;
        }
    </style>
</head>

<body class="bg-light">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="/">ðŸš€ TechStore</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="menu">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/categoria/computadores">Computadores</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/categoria/perifericos">PerifÃ©ricos</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-success ms-3" href="/admin/productos/nuevo">
                            + Agregar producto
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenido -->
    <div class="container mt-5">
        <h1 class="text-center mb-5 fw-bold"><%= titulo %></h1>

        <div class="row g-4">
            <% productos.forEach(item => { %>
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100">
                        <img src="<%= item.imagen %>" class="card-img-top" alt="<%= item.nombre %>">

                        <div class="card-body d-flex flex-column text-center">
                            <h5 class="card-title mb-2"><%= item.nombre %></h5>

                            <p class="text-muted small mb-2">
                                <%= item.categoria %>
                            </p>

                            <p class="text-success fw-bold price mb-3">
                                $<%= item.precio %>
                            </p>

                            <!-- Botones -->
                            <div class="mt-auto">
                                <a href="/producto/<%= item._id %>" 
                                   class="btn btn-detalle w-100 mb-2">
                                    Ver detalle
                                </a>

                                <a href="/admin/productos/editar/<%= item._id %>" 
                                   class="btn btn-editar w-100 mb-2">
                                    Editar
                                </a>

                                <form action="/admin/productos/eliminar/<%= item._id %>" 
                                      method="POST">
                                    <button type="submit" 
                                            class="btn btn-danger w-100"
                                            onclick="return confirm('Â¿Eliminar este producto?')">
                                        Eliminar
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <!-- Footer -->
    <footer class="text-center">
        <div class="container">
            <p class="mb-0">Â© 2026 TechStore â€” Todos los derechos reservados</p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
